<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    >

    <EditText
        android:id="@+id/forgotten_email"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:background="@drawable/loginedittextborder"
        android:inputType="textAutoComplete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/forgotten_email"
        android:layout_alignLeft="@id/forgotten_email"
        android:layout_marginTop="-25dp"
        />

        />
    <View
        android:id="@+id/anchorSignup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/anchorAnchorSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        />
    <View
        android:id="@+id/anchorAnchorSignup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/forgotten_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="142dp"
        android:layout_marginEnd="46dp"
        android:text="Submit"
        android:textSize="20sp" />

</RelativeLayout>