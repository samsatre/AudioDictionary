<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:inputType="textAutoComplete"
        android:layout_alignTop="@id/anchorLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:background="@drawable/loginedittextborder"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:inputType="textWebPassword"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/anchorLogin"
        android:layout_marginBottom="-65dp"
        android:background="@drawable/loginedittextborder"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in Username"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/username"
        android:layout_alignLeft="@id/username"
        android:layout_marginTop="-25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in Password"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/password"
        android:layout_alignLeft="@id/password"
        android:layout_marginTop="-25dp"
        />
    <View
        android:id="@+id/anchorLogin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/anchorAnchor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        />
    <View
        android:id="@+id/anchorAnchor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="75dp"
        android:text="Log in"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/loginbutton"
        android:layout_marginStart="75dp"
        android:text="Sign Up"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/signupbutton"
        android:text="@string/login_forgot"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlueForgot"
        />


</RelativeLayout>