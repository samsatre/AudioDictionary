<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    >

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:inputType="textAutoComplete"
        android:layout_alignTop="@id/anchorSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:background="@drawable/loginedittextborder"
        />
    <EditText
        android:id="@+id/signup_password"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:inputType="textWebPassword"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/anchorSignup"
        android:layout_marginBottom="-65dp"
        android:background="@drawable/loginedittextborder"
        />
    <EditText
        android:id="@+id/signup_email"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/signup_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-85dp"
        android:background="@drawable/loginedittextborder"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/signup_email"
        android:layout_alignLeft="@id/signup_email"
        android:layout_marginTop="-25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Username"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/signup_username"
        android:layout_alignLeft="@id/signup_username"
        android:layout_marginTop="-25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Password"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:layout_alignTop="@id/signup_password"
        android:layout_alignLeft="@id/signup_password"
        android:layout_marginTop="-25dp"
        />
    <View
        android:id="@+id/anchorSignup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/anchorAnchorSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        />
    <View
        android:id="@+id/anchorAnchorSignup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/signup_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="121dp"
        android:layout_marginEnd="48dp"
        android:text="Submit"
        android:textSize="20sp"
        />

</RelativeLayout>